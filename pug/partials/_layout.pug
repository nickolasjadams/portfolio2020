doctype html
html(lang="en")
	include _mixins.pug
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")

		link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
		<link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,400;0,600;1,100;1,400;1,600&display=swap" rel="stylesheet">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
		link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css")
		link(rel="stylesheet" href="css/styles.css")

		meta(name="theme-color" content="#6c4dee")

		block css

		block meta

			+seo(
			/* Title */
			"Nick Adams Portfolio | Web and Software Developer", 
			/* Description */
			"Nick Adams is a web and software developer with experience in front-end and back-end web development, programming, AWS, user-interface design, SEO, Accessibility, hosting, and more.",
			/* Keywords */
			"Nick Adams, Portfolio, Web development, Software development, PHP, Java, Python, Bash, HTML, CSS, Javascript")
		
		block analytics
			if (!forked) /* Nick's analytics */
				if (domain === "nickjadams.com")
					script(async, src="https://www.googletagmanager.com/gtag/js?id=UA-92475508-2")
					<!-- Global site tag (gtag.js) - Google Analytics -->
					script.
						console.log("hello google")
						window.dataLayer = window.dataLayer || [];
						function gtag(){dataLayer.push(arguments);}
						gtag('js', new Date());
						gtag('config', 'UA-92475508-2');
			else
				//- Place analytics scripts here.
        
	body.public-index

		ul.skip-nav
			li 
				a(href="#content") Skip to Main Content

		include _header.pug

		.main-wrapper
			main#content

				block content

		.container
			include _footer.pug

		block modals

		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
		<script src="https://unpkg.com/tilt.js@1.2.1/dest/tilt.jquery.min.js"></script>
		<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
		script(src="https://cdn.jsdelivr.net/npm/pdfobject@2.2.4/pdfobject.min.js")
		script(src="js/scripts.js" defer)
		script.
			AOS.init();
			$('[data-tilt]').tilt({
				scale: 1.07,
				speed: 200,
				perspective: 1000
			})
			
			var navToggler = $("#nav-wrapper .navbar-toggler");

			navToggler.on("click", function() {
				if (navToggler.hasClass("collapsed")) {
					$("#nav-wrapper").removeClass("open");
				} else {
					$("#nav-wrapper").addClass("open");
				}
			})

			window.onscroll = function() { 
				let pos = $(window).scrollTop();

				if (pos > 100) {
					$("#nav-wrapper").addClass("disappear");
				} else {
					$("#nav-wrapper").removeClass("disappear");
				}
			}

		block scripts